#!/bin/sh

PHP_CBF_BIN=dev_vendor/bin/phpcbf
PHP_CBF_CONFIG_START=phpcs.xml
PHP_CBF_CONFIG_END=phpcs-end.xml

PHP_FIX_BIN=dev_vendor/bin/php-cs-fixer
PHP_FIX_CONFIG=.php_cs.dist

PROJECT=$(php -r "echo dirname(dirname(dirname(realpath('$0'))));")
PHP_FILES=$(git diff-index --name-only --cached --diff-filter=ACMRT HEAD -- | egrep '\.php$|\.inc$|\.class$')
FIX_FILES=$(git diff-index --name-only --cached --diff-filter=ACMRT HEAD -- | egrep '\.php$|\.inc$|\.class$|\.css$|\.js$|\.xml$|\.xaml$|\.html$')

# Check if PHP-CS-FIXER is set up correctly
if [ ! -x $PHP_FIX_BIN ]
then
	echo ""
	echo ""
	echo "PHP-CS-FIXER not Found or not Executable ... Aborting"
	echo ""
	exit 1
else
	# Check if PHPCBF is set up correctly
	if [ ! -x $PHP_CBF_BIN ]
	then
		echo ""
		echo ""
   		echo "PHPCBF not Found or not Executable ... Aborting"
		echo ""
		exit 1
	else
		# Lint PHP files if present
		if [ "$PHP_FILES" != "" ]
		then
			echo ""
			echo "Running PHP Lint ..."
			echo ""
			for PHP_FILE in $PHP_FILES
			do
				FILE="$PROJECT/$PHP_FILE"
				RET=$(php -l -d display_errors=0 $FILE)
				if [ $? != 0 ]
				then
					echo ""
					echo "PHP Syntax Errors Found ... Aborting"
					echo ""
					RET=$(git reset HEAD $FILE)
					echo ""
					echo "Please Fix Errors and Repeat Commit"
					echo "Remember to Run 'git add $FILE' before Repeating the Commit"
					echo ""
					exit 1
				fi
			done
			echo ""
			echo "PHP Lint Completed"
			echo ""
		fi

		# Execute PHPCBF & PHP-CS-FIXER
		echo ""
		echo "Fixing Coding Style ..."
		echo ""
		for TARGET_FILE in $FIX_FILES
		do
			FILE="$PROJECT/$TARGET_FILE"
			# Unstage target file
			RET=$(git reset HEAD $FILE)


			# Prepare misc items in target file for PHPCBF and PHP-CS-FIXER
			# 01. Move end of line "//"comments to previous line
			RET=$(perl -i -pe 's/^(\s*)([^;]+;)(\s*)(\/\/[^\n]+\n)/\n$1$4\n$1$2\n/' $FILE)
			# 02. Remove all blank lines
			RET=$(perl -i -pe 's/^\s*$//' $FILE)
			# 03. Add blank line after "global" &  "static" $XYZ calls
			RET=$(perl -i -pe 's/^(\s*)(global|static)([^;]+;)(\s*)$/$1$2$3$4\n\n/' $FILE)
			# 04. Add blank line before and after "$XYZ->" calls
			RET=$(perl -i -pe 's/^([^=]*\$)([^-=]+->)([^\)=]+\))([^;]*;)(.*)$/\n\n$1$2$3$4$5\n\n/' $FILE)
			# 05. Add blank line before "$query" & "$ret" calls
			RET=$(perl -i -pe 's/^(\s*)(\$query|\$ret)(\s*)(\.?=)/\n\n$1$2$3$4/' $FILE)
			# 06. Add blank line before "list" calls
			RET=$(perl -i -pe 's/^(\s*)list\(/\n\n$1list(/' $FILE)
			# 07. Add blank line after single line "list" & "$ret" calls
			RET=$(perl -i -pe 's/^(\s*)(list\(|\$ret)([^;]+;)(.*)/$1$2$3$4\n\n/' $FILE)
			# 08. Add blank lines before and after "require" and "include" calls
			RET=$(perl -i -pe 's/^(\s*)(require|include)([^;]+;)(.*)$/\n\n$1$2$3$4\n\n/' $FILE)
			# 09. Add blank lines before and after calls to "Gallery" static mathods
			RET=$(perl -i -pe 's/^(\s*)(Gallery)([^:]+::)([^;]+;)(.*)$/\n\n$1$2$3$4$5\n\n/' $FILE)
			# 10. Add blank line after closing braces, multiline statements and  multiline strings
			RET=$(perl -i -pe 's/^(\s*)(\)|\x27;|";|\})(\s*)$/$1$2$3\n\n/' $FILE)
			# 11. Add blank line before single line comments
			RET=$(perl -i -pe 's/^(\s*)(\/\/[^\n]+\n)/\n\n$1$2/' $FILE)
			# 12.  Add blank line before multi line comments
			RET=$(perl -i -pe 's/^(\s*)\/\*/\n\n$1\/\*/' $FILE)
			# 13. Add blank line before "Fall Through"
			RET=$(perl -i -pe 's/(\s+)(\/\/ Fall Through)/\n\n$1$2/' $FILE)
			# 14. Remove blank single line comments
			RET=$(perl -i -pe 's/^(\s*)(\/\/)(\s*)$//' $FILE)
			# 15. Remove blank lines after opening braces
			RET=$(perl -i -0pe 's/\{(\s*\n\s*){1,}(\n\s*)/\{$2/gms' $FILE)
			# 16. Remove blank lines after multiline comments
			RET=$(perl -i -0pe 's/(\s*)(\*\/[^\n]*\n)(\s*\n)/$1$2/gms' $FILE)
			# 17. Add blank line between multi and single line comments
			RET=$(perl -i -0pe 's/(\s*)(\*\/[^\n]*\n)(\s*)(\/\/)/$1$2\n$3$4/gms' $FILE)
			# 18. Add blank line between single and multi line comments
			RET=$(perl -i -0pe 's/(\s*)(\/\/[^\n]+\n)(\s*)(\/\*[^\n]*\n)/$1$2\n\n$3$4/gms' $FILE)
			# 19. Remove blank lines after single line comments
			RET=$(perl -i -0pe 's/([^\w]+)(\/\/[^\n]+\n)(\s*\n){1,}/$1$2/gms' $FILE)
			RET=$(perl -i -0pe 's/([^\w]+)(\/\/[^\n]+\n)(\s*\n){1,}/$1$2/gms' $FILE)
			RET=$(perl -i -0pe 's/([^\w]+)(\/\/[^\n]+\n)(\s*\n){1,}/$1$2/gms' $FILE)
			# 20. Remove blank lines between consecutive $XYZ->" calls
			RET=$(perl -i -0pe 's/^(\s*)(\$[^-=]+->)([^=;]+;)(\s*\n\s*){1,}\n(\s*)(\$[^-=]+->)([^=;]+;)/$1$2$3\n$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/^(\s*)(\$[^-=]+->)([^=;]+;)(\s*\n\s*){1,}\n(\s*)(\$[^-=]+->)([^=;]+;)/$1$2$3\n$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/^(\s*)(\$[^-=]+->)([^=;]+;)(\s*\n\s*){1,}\n(\s*)(\$[^-=]+->)([^=;]+;)/$1$2$3\n$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/^(\s*)(\$[^-=]+->)([^=;]+;)(\s*\n\s*){1,}\n(\s*)(\$[^-=]+->)([^=;]+;)/$1$2$3\n$5$6$7\n/gms' $FILE)
			# 21. Remove blank lines between consecutive "global" and "static" $XYZ calls
			RET=$(perl -i -0pe 's/(\n\s*)(global|static)([^;]+;)(\s*\n\s*){1,}(\n\s*)(global|static)([^\n]+\n)/$1$2$3$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/(\n\s*)(global|static)([^;]+;)(\s*\n\s*){1,}(\n\s*)(global|static)([^\n]+\n)/$1$2$3$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/(\n\s*)(global|static)([^;]+;)(\s*\n\s*){1,}(\n\s*)(global|static)([^\n]+\n)/$1$2$3$5$6$7\n/gms' $FILE)
			# 22. Remove blank lines between consecutive calls to "Gallery" static mathods
			RET=$(perl -i -0pe 's/(\n\s*)(Gallery[^:]+::)([^;]+;)(\s*\n\s*){1,}(\n\s*)(Gallery[^:]+::)([^\n]+\n)/$1$2$3$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/(\n\s*)(Gallery[^:]+::)([^;]+;)(\s*\n\s*){1,}(\n\s*)(Gallery[^:]+::)([^\n]+\n)/$1$2$3$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/(\n\s*)(Gallery[^:]+::)([^;]+;)(\s*\n\s*){1,}(\n\s*)(Gallery[^:]+::)([^\n]+\n)/$1$2$3$5$6$7\n/gms' $FILE)
			RET=$(perl -i -0pe 's/(\n\s*)(Gallery[^:]+::)([^;]+;)(\s*\n\s*){1,}(\n\s*)(Gallery[^:]+::)([^\n]+\n)/$1$2$3$5$6$7\n/gms' $FILE)
			# 23. Remove blank lines before closing braces
			RET=$(perl -i -0pe 's/(\s*\n\s*){1,}(\n\s*)\}/$2\}/gms' $FILE)
			RET=$(perl -i -0pe 's/(\s*\n\s*){1,}(\n\s*)\}/$2\}/gms' $FILE)
			RET=$(perl -i -0pe 's/(\s*\n\s*){1,}(\n\s*)\}/$2\}/gms' $FILE)
			RET=$(perl -i -0pe 's/(\s*\n\s*){1,}(\n\s*)\}/$2\}/gms' $FILE)
			# 24. Separate multiline comment blocks
			RET=$(perl -i -0pe 's/(\s*)\*\/(\n*\s*)\/\*/$1\*\/\n\n$2\/\*/gms' $FILE)
			RET=$(perl -i -0pe 's/(\s*)\*\/(\n*\s*)\/\*/$1\*\/\n\n$2\/\*/gms' $FILE)
			RET=$(perl -i -0pe 's/(\s*)\*\/(\n*\s*)\/\*/$1\*\/\n\n$2\/\*/gms' $FILE)
			RET=$(perl -i -0pe 's/(\s*)\*\/(\n*\s*)\/\*/$1\*\/\n\n$2\/\*/gms' $FILE)
			# 25. Remove blank lines after switch case
			RET=$(perl -i -0pe 's/([^:]+:)(\s*\n\s*){1,}(\n\s*)([^\n]+\n)/$1$3$4/gms' $FILE)
			RET=$(perl -i -0pe 's/([^:]+:)(\s*\n\s*){1,}(\n\s*)([^\n]+\n)/$1$3$4/gms' $FILE)
			RET=$(perl -i -0pe 's/([^:]+:)(\s*\n\s*){1,}(\n\s*)([^\n]+\n)/$1$3$4/gms' $FILE)
			RET=$(perl -i -0pe 's/([^:]+:)(\s*\n\s*){1,}(\n\s*)([^\n]+\n)/$1$3$4/gms' $FILE)


			# Apply coding style to target file
			RET=$($PHP_CBF_BIN --standard=$PHP_CBF_CONFIG_START $FILE)
			RET=$($PHP_FIX_BIN fix --config "$PHP_FIX_CONFIG" $FILE)
			RET=$($PHP_CBF_BIN --standard=$PHP_CBF_CONFIG_END $FILE)


			# Catch misc items in target file not covered by PHPCBF or PHP-CS-FIXER
			# 01. Standardise Assignment by Reference
			RET=$(perl -i -pe 's/=& \s*/=& /' $FILE)
			# 02. Close empty braces on same line
			RET=$(perl -i -0pe 's/\{\s*\n\s*\}([^\w]*)/{}$1/gms' $FILE)
			# 03. Remove blank lines between consecutive "require" and/or "include" calls
			RET=$(perl -i -0pe 's/(\s*)(require|include)([^;]+;.*)(\s*\n\s*){1,}(\n\s*)(require|include)([^\n]+\n)/$1$2$3$5$6$7/gms' $FILE)
			RET=$(perl -i -0pe 's/(\s*)(require|include)([^;]+;.*)(\s*\n\s*){1,}(\n\s*)(require|include)([^\n]+\n)/$1$2$3$5$6$7/gms' $FILE)
			# 04. Remove excess blank lines
			RET=$(perl -i -0pe 's/(\n\s*){2,}(\n\s*)/\n$2/gms' $FILE)


			# Stage target file
			git add $FILE
		done
		echo ""
		echo "Coding Style Fix Completed"
		echo ""
		# Check for staged changes and abort if none
		RET=$(git diff --cached)

		if [ "$RET" == "" ]
		then
			echo ""
			echo "NOTE: Commit Emptied After Style Fix ... Aborting"
			echo ""
			exit 1
		fi

		# Completed
		echo ""
		echo ""
		echo "Coding Style Fixed"
		echo ""
		echo ""
	fi
fi
